{% extends 'base.html.j2' %}

{% block header %}
  <h1 class="subhead">{% block title %}Project No.{{ project['number']}}{% endblock %}</h1>
{% endblock %}

{% block content %}
  <div class="column">
    <div class="colbox">
       <h2>{{ project['idea'] }}</h2>
       <h3>Notes</h3>
        <p>{{ project['memoranda'] }}</p>
       <h3>Links</h3>
        {% if project['links'] %}
            {% for link in project['links'].split() %}
        <p><a href="{{ link }}">{{ link }}</a></p>
            {% endfor %}
        {% else %}
        <p>None</p>
        {% endif %}
    </div>
    <div class="colbox">
       <p>Created: {{ project['created'] }}</p>
       <p>Neverending Story: {{ project['continuous'] }}</p>
       <p>Started On: {{ project['started_on'] }}</p>
       <p>Stopped On: {{ project['stopped_on'] }}</p>
       {% if not project['done'] %}
       <p>Not done yet</p>
       {% else %}
       <p>Completed: {{ project['done'] }}<p>
       {% endif %}
       <p>Last Updated on {{ project['last_modified'] }}</p>
    </div>
  </div>
{% endblock %}